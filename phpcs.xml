<?xml version="1.0"?>
<ruleset name="client-builder" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">
    <description>client-builder</description>

    <arg name="report" value="full"/>
    <arg value="wps"/>
    <arg name="encoding" value="utf-8"/>

    <!-- Check up to 8 files simultaneously. -->
    <arg name="parallel" value="8"/>

    <!-- inherit rules from: -->
    <rule ref="mimmi20-cs"/>

    <!-- Paths to check -->
    <file>src</file>
    <file>test</file>
    <file>.php-cs-fixer.php</file>
</ruleset>
